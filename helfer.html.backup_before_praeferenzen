    <script>
        // URL-Parameter lesen um die urspr√ºnglichen Anmeldedaten zu √ºbernehmen
        const urlParams = new URLSearchParams(window.location.search);
        const originalData = {
            name: urlParams.get('name') || '',
            email: urlParams.get('email') || '',
            loge: urlParams.get('loge') || '',
            gaesteNamen: urlParams.get('gaesteNamen') || '',
            anzahlGaeste: urlParams.get('anzahlGaeste') || '0',
            gesamtPersonen: urlParams.get('gesamtPersonen') || '1',
            buffet: urlParams.get('buffet') || '',
            portionen: urlParams.get('portionen') || '',
            timestamp: urlParams.get('timestamp') || ''
        };

        // n8n Webhook URL
        const N8N_WEBHOOK_URL = 'https://automatisierung.frankrath.de/webhook/sommerfest-anmeldung';

        // Radio-Button Styling
        document.querySelectorAll('input[type="radio"]').forEach(radio => {
            radio.addEventListener('change', function() {
                // Alle Optionen der gleichen Gruppe zur√ºcksetzen
                const groupName = this.name;
                document.querySelectorAll(`input[name="${groupName}"]`).forEach(r => {
                    r.closest('.radio-option').classList.remove('selected', 'declined');
                });
                
                // Aktuelle Auswahl highlighten
                if (this.value.includes('Ja')) {
                    this.closest('.radio-option').classList.add('selected');
                } else {
                    this.closest('.radio-option').classList.add('declined');
                }
            });
        });

        // Formular-Submit Handler
        document.getElementById('helperForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            // Button sofort deaktivieren
            const submitButton = document.querySelector('button[type="submit"]');
            const originalText = submitButton.textContent;
            submitButton.disabled = true;
            submitButton.textContent = "Wird √ºbertragen...";
            submitButton.style.backgroundColor = "#6c757d";
            submitButton.style.cursor = "not-allowed";
            
            // Helfer-Daten sammeln
            const aufbauValue = document.querySelector('input[name="aufbau"]:checked')?.value;
            const abbauValue = document.querySelector('input[name="abbau"]:checked')?.value;
            const bemerkungenValue = document.getElementById('bemerkungen').value || 'Keine besonderen Hinweise';

            // Validierung
            if (!aufbauValue || !abbauValue) {
                // Button wieder aktivieren bei Fehler
                submitButton.disabled = false;
                submitButton.textContent = originalText;
                submitButton.style.backgroundColor = "#2c5282";
                submitButton.style.cursor = "pointer";
                
                document.getElementById("errorMessage").style.display = "block";
                document.getElementById("successMessage").style.display = "none";
                return;
            }

            // Vollst√§ndige Daten zusammenstellen (Original + Helfer)
            const completeData = {
                ...originalData,
                aufbau: aufbauValue,
                abbau: abbauValue,
                bemerkungen: bemerkungenValue
            };

            try {
                // Daten an n8n senden
                const params = new URLSearchParams(completeData);
                const urlWithParams = N8N_WEBHOOK_URL + "?" + params.toString();
                
                const response = await fetch(urlWithParams, {
                    method: 'GET',
                    headers: {}
                });

                if (response.ok) {
                    console.log('Helfer-Daten gesendet:', completeData);
                    
                    // Erfolgsmeldung
                    document.getElementById('successMessage').style.display = 'block';
                    document.getElementById('errorMessage').style.display = 'none';
                    
                    // Button-Text √§ndern
                    submitButton.textContent = "Erfolgreich! Weiterleitung...";
                    
                    // Weiterleitung zur Abschlussseite nach 2 Sekunden
                    setTimeout(() => {
                        const abschlussParams = new URLSearchParams(completeData);
                        window.location.href = `abschluss.html?${abschlussParams.toString()}`;
                    }, 2000);
                    
                } else {
                    throw new Error('HTTP ' + response.status);
                }
                
            } catch (error) {
                console.error('Fehler beim Senden:', error);
                
                // Button wieder aktivieren bei Fehler
                submitButton.disabled = false;
                submitButton.textContent = originalText;
                submitButton.style.backgroundColor = "#2c5282";
                submitButton.style.cursor = "pointer";
                
                document.getElementById('errorMessage').textContent = 'Fehler beim Senden der Helfer-Angaben. Bitte versuche es sp√§ter erneut.';
                document.getElementById('errorMessage').style.display = 'block';
                document.getElementById('successMessage').style.display = 'none';
            }
        });

        // Helfer-Statistiken laden (Platzhalter)
        function loadHelferStats() {
            // TODO: Live-Daten √ºber Webhook laden
            document.getElementById("aufbau-count").textContent = "12";
            document.getElementById("abbau-count").textContent = "8";
        }
        
        // Beim Laden der Seite
        loadHelferStats();

    </script>
